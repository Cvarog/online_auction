d= simple_nested_form_for [:admin, @item], :html => { :multipart => true } do |f|
  %p
    = f.input :name
  %p
    = f.input :description
  %p
    = f.input :price
  
  %p
  = f.fields_for :images do |image|
    - unless image.object.new_record?
      = image_tag image.object.item_image.url(:medium)
    - else
      = image.file_field :item_image
    = image.link_to_remove "Remove"
  = f.link_to_add "Add image", :images
  %p
    =f.submit "Save"
