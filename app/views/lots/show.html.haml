.lot{id: "lot_#{@lot.id}"}
  %h1
    = @lot.name
  %h3
    = @lot.price
  %p
    =@lot.start_time
  %p.expired_time
    =@lot.expired_time

  %p
    -@lot.item.images.each do |i|
      =image_tag i.item_image.url(:medium)
  / -@item.images.each do |i|
  / %p=image_tag i.item_image.url(:medium)

-unless @lot.finished?
  =button_to 'Make a Bet!', bets_path(lot_id: @lot), remote: true

